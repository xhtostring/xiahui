	/* Swiper 容器样式 */
.banner-swiper.data-v-1cf27b2a {
		height: 350rpx;
		/* Swiper 的高度需要设置，与原 Banner 高度一致 */
		margin-bottom: 30rpx;
		border-bottom-left-radius: 20rpx;
		border-bottom-right-radius: 20rpx;
		overflow: hidden;
		/* 确保内容不会超出圆角 */
}

	/* 将 section-banner 的样式应用到 swiper-item 内的 container */
	/* Swiper Item 内的容器 */
.section-banner.data-v-1cf27b2a {
		position: relative;
		height: 100%;
		/* 占满 swiper-item 的高度 */
		width: 100%;
		/* 占满 swiper-item 的宽度 */
		border-bottom-left-radius: 20rpx;
		/* 保持圆角 */
		border-bottom-right-radius: 20rpx;
		/* 保持圆角 */
		overflow: hidden;
		/* 确保背景图不会超出圆角 */
}
